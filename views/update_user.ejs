        <div class="form-title text-center">
            <h2 class="text-dark">Update Student Data </h2>
            <span class="text-light">Fill the below form to Update Student details </span>
        </div>

        <!-- add user form -->  
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="name" value="<%= user.name %>" placeholder="Update Student Name ">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="<%= user.email%>" placeholder="student@gmail.com">
        </div>

        <div class="form-group">
            <label for="Marks_1" class="text-light">Marks 1</label>
            <input type="number" name="Marks1" value="<%= user.Marks1 %>" placeholder="Update Marks of Paper 1">
        </div>
        <div class="form-group">
            <label for="Marks_2" class="text-light">Marks 2</label>
            <input type="number" name="Marks2" value="<%= user.Marks2 %>" placeholder="Update Marks of Paper 2">
        </div>

        <div class="form-group">
            <label for="Marks_3" class="text-light">Marks 3</label>
            <input type="number" name="Marks3" value="<%= user.Marks3 %>" placeholder="Update Marks of Paper 3">
        </div>

        <div class="form-group">
            <label for="Marks_4" class="text-light">Marks 4</label>
            <input type="number" name="Marks4" value="<%= user.Marks4 %>" placeholder="Update Marks of Paper 4">
        </div>

        <div class="form-group">
            <label for="Marks_5" class="text-light">Marks 5</label>
            <input type="number" name="Marks5" value="<%= user.Marks5 %>" placeholder="Update Marks of Paper 5">
        </div>

